{
  "name": "lyzr-support-backend",
  "version": "1.0.0",
  "description": "Lyzr Support Chat Backend API",
  "main": "dist/index.js",
  "scripts": {
    "dev": "nodemon src/index.ts",
    "build": "npm run clean && tsc && npm run copy-templates",
    "copy-templates": "cp -r src/templates dist/templates 2>/dev/null || mkdir -p dist/templates && cp src/templates/* dist/templates/",
    "start": "node dist/index.js",
    "test": "jest",
    "clean": "rm -rf dist"
  },
  "dependencies": {
    "express": "^4.18.2",
    "mongoose": "^8.0.0",
    "cors": "^2.8.5",
    "helmet": "^7.1.0",
    "bcryptjs": "^2.4.3",
    "jsonwebtoken": "^9.0.2",
    "dotenv": "^16.3.1",
    "socket.io": "^4.7.5",
    "axios": "^1.6.2",
    "zod": "^3.22.4"
  },
  "devDependencies": {
    "@types/express": "^4.17.21",
    "@types/node": "^20.10.0",
    "@types/bcryptjs": "^2.4.6",
    "@types/jsonwebtoken": "^9.0.5",
    "@types/cors": "^2.8.17",
    "typescript": "^5.3.2",
    "nodemon": "^3.0.2",
    "ts-node": "^10.9.1"
  }
}